{
  "include": ["src/**/*"],
  "compilerOptions": {
    "outDir": "./dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES5",
    "lib": ["ES2019"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "sourceRoot": "/",
    "sourceMap": true,
    "inlineSources": true,
    "removeComments": true,
    "strict": true
  },
  "exclude": ["node_modules", "dist"]
}
